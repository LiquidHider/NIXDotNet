@{
    ViewData["Title"] = "Home";
}
<head>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.css"/>
</head>
<body class="align-content-center">
   
    <div id="carouselExampleIndicators" class="carousel slide mb-3" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner item">
            <div class="carousel-item active">
                <img src="/img/1.jpeg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="/img/2.jpeg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="/img/3.jpeg" class="d-block w-100">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
       
    <div class="text-black text-center pb-3">
        <h1>Models</h1>
    </div>
<div class="container">
        <div class="row row-cols-3">
            @for (int i = 0; i < 6; i++)
            {
                <div class="card bg-opacity-0" >
                    <a asp-area="" asp-controller="Home" asp-action="Error">
                        <img src="/img/test.jpg">
                        <div class="card-img-overlay bg-opacity-0">
                            <strong class="text-start text-black" style="margin-top: 5px; margin-left: 5px;">Model №@(i+1)</strong>
                            <p>  <strong class="text-start text-black" style="margin-left: 5px;">Oriented price: @(1000000 + 100000 * i * i * i)</strong></p>
                        </div>
                    </a>
                </div>
             }
            </div>
    </div>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="/lib/bootstrap/dist/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
</body>